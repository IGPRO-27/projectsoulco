<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record model="ir.ui.view" id="product_template_custom_form_view">
      <field name="name">product.template.custom.form.view</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="after">
    	  <field name="num_serie" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
    	</xpath>
	<xpath expr="//field[@name='default_code']" position="replace">
    	  <field name="default_code" string="Reference L" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
    	</xpath>
	<xpath expr="//field[@name='ean13']" position="replace">
    	  <field name="ean13" string="Reference S" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
    	</xpath>
      </field>
    </record>

  </data>
</openerp>


