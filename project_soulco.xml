<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_template_custom_form_view">
            <field name="name">product.template.custom.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="num_serie"/>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="replace">
                    <field name="default_code" string="Reference L"/>
                </xpath>
                <xpath expr="//field[@name='ean13']" position="replace">
                    <field name="ean13" string="Reference S"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_view_order_form_custum">
            <field name="name">sale.view.order.form.custum</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='Sales Order Lines']" position="inside">
                    <!-- <field name="product_id.num_serie"/>
                    <field name="product_id.default_code" string="Reference L"/>
                    <field name="product_id" string="Reference S" /> -->
                </xpath>
            </field>
        </record>

    </data>
</openerp>
