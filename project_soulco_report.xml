<?xml version="1.0"?>
<openerp>
    <data>

        <template id="project_soulco_report_saleorder_quotation_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[1]" position="after">
                <th>Numéro de serie</th>
            </xpath>
            <!-- <xpath expr="//table[@class='table table-condensed']//thead//tr//th[2]" position="after"> -->
            <!--   <th>Reference L</th> -->
            <!-- </xpath> -->
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[2]" position="after">
                <th>Reference S</th>
            </xpath>
            <xpath expr="//tbody[@class='sale_tbody']/tr/td[1]" position="after">
                <td>
                    <span t-field="l.product_id.num_serie"/>
                </td>
            </xpath>
            <!-- <xpath expr="//tbody[@class='sale_tbody']/tr/td[2]" position="after"> -->
            <!--   <td> -->
            <!--     <span t-field="l.product_id.default_code"/> -->
            <!--   </td> -->
            <!-- </xpath> -->
            <xpath expr="//tbody[@class='sale_tbody']/tr/td[2]" position="after">
                <td>
                    <span t-field="l.product_id.ean13"/>
                </td>
            </xpath>
        </template>

        <template id="project_soulco_report_purchase_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[1]" position="after">
                <th>Numéro de serie</th>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[2]" position="after">
                <th>Reference L</th>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[3]" position="after">
                <th>Reference S</th>
            </xpath>
            <xpath expr="//tbody/tr/td[1]" position="after">
                <td>
                    <span t-field="line.product_id.num_serie"/>
                </td>
            </xpath>
            <xpath expr="//tbody/tr/td[2]" position="after">
                <td>
                    <span t-field="line.product_id.default_code"/>
                </td>
            </xpath>
            <xpath expr="//tbody/tr/td[3]" position="after">
                <td>
                    <span t-field="line.product_id.ean13"/>
                </td>
            </xpath>
        </template>

    </data>
</openerp>
